<main>
  <div>
      <div class="date"> <h1>TODAY <span> actual date </span></h1></div>

      <% @posts.each do |post| %>
        <%= link_to post_path(post) do %>
          <div class="product" >
              <div class="votes">
                <div class="votesubdiv"><i class="fa fa-chevron-up" aria-hidden="true"></i></div>
                <div class="votesubdiv">1234</div>
                <div class="votesubdiv"><i class="fa fa-chevron-down" aria-hidden="true"></i></div>
              </div>
              <div class="content">
                <div class="productname"> <%= post.post_title %></div>
                <div class="productdesc"> <%= post.post_content %> </div>
              </div>
              <div class="avatar"><img class="img-circle" src="<%= post.post_thumbnail_url %>" height=40 width=40> </div>
              <div class="comments"><i class="fa fa-comment-o" aria-hidden="true"></i> ### </div>
          </div>
     <% end %>

      <% if can? :update, post %>
        <%= link_to "Edit", edit_post_path(post) %>
      <% end %>
      <% if can? :destroy, post %>
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>


      <% end %>


      </div>
  </main>
